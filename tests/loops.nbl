include 'helpers.nbl';

let sum = 0;
let i = 0;
while (i < 10) {
    sum += i;
    i++;
}
assert(sum == 45);

sum = 0;
for (let i = 0; i < 10; i++) {
    sum += i;
}
assert(sum == 45);

const cities = ['Gouda', 'Rotterdam', 'Amsterdam'];
let str = '';
for (const city in cities) {
    str += city;
}
assert(str == 'GoudaRotterdamAmsterdam');

assertFails(fn () {
    while (null);
});
assertFails(fn () {
    while (34);
});
assertFails(fn () {
    do {} while ('32');
});
